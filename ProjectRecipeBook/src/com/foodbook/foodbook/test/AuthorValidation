	/**
	 * method create a new setup/activity
	 */
	protected void setUp() throws Exception
	{

		super.setUp();
		testRecipeBook = new RecipeBook();
	}
	
	/**
	 * method to test User/author
	 */
	public void testAuthor() {
		try{

			testRecipeBook.getAuthor();
			
			} catch (Exception e) {
            fail("Exception occurred");
        }
    }

